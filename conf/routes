# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Serve index page from public directory
GET     /                           controllers.FrontendController.index()

POST    /messages                   controllers.MessageController.messages()

GET     /loginInfo                  controllers.UserController.loginInfo()
GET     /startLogin                 controllers.UserController.startLogin()
POST    /login                      controllers.UserController.login()
POST    /logoff                     controllers.UserController.logoff()

#GET     /changePassword             controllers.UserController.changePasswordStart()
POST    /changePassword             controllers.UserController.changePassword()

GET     /admin                      controllers.AdminController.top

GET     /timeZoneInfo               controllers.TimeZoneController.table

POST    /createSite                 controllers.SiteController.createSite
POST    /updateSite                 controllers.SiteController.updateSite(siteId: Long)
GET     /listSiteToUpdate           controllers.SiteController.listSiteToUpdate(page: Int ?= 0, pageSize: Int ?= 10, orderBySpec ?= "site.created_at desc")
POST    /deleteSite                 controllers.SiteController.deleteSite(siteId: Long)

GET     /attend                     controllers.AttendController.index(siteId: Long)
POST    /registerRecord             controllers.AgentRecordController.createAgentRecord
GET     /registeredRecords          controllers.AgentRecordController.registeredRecords(siteId: Long, agentName: String)

# An example route (Prefix all API routes with apiPrefix defined in application.conf)
GET     /version                    controllers.HomeController.version

# Serve static assets under public directory
GET     /*file                      controllers.FrontendController.assetOrDefault(file)
